<!DOCTYPE html>
<html lang="en">
<head>

    @{
        var Config = new
        {
            FirstName = "Ingrid",
            LastName = "Hauss",
            Email = "ingridhauss@yahoo.com",
            Phone = "+1-604-720-1460",
            TagLine = "Yoga, Art & Renewal."
        };
    }

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@Config.FirstName @Config.LastName @Config.TagLine official site for bookings, classes, retreats, and art gallery." />
    <meta name="keywords" content="yoga, art, retreats, hatha, yin" />

    <title>@Config.FirstName @Config.LastName | @Config.TagLine</title>

    <link href="@Fingerprint.Tag("/Content/favicon.ico")" rel="shortcut icon" />
    <link href="@Fingerprint.Tag("/Content/site.min.css")" rel="stylesheet" />

    <!-- Bootstrap -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @*IE 10*@
    <style type="text/css">
        @@-webkit-viewport {
            width: device-width;
        }

        @@-moz-viewport {
            width: device-width;
        }

        @@-ms-viewport {
            width: device-width;
        }

        @@-o-viewport {
            width: device-width;
        }

        @@viewport {
            width: device-width;
        }
    </style>

</head>
<body data-spy="scroll" data-target="#site-nav">



    <div class="container">

        <header class="row">
            <div class="col-md-4">
                <img alt="A black and white zen drawing of a stick figure person surrounded by a fire." class="img-responsive" src="images/energetic-warrior-xs.jpg" />
            </div>
            <div class="col-md-8">
                <h1>@Config.FirstName @Config.LastName</h1>
                <h2>@Config.TagLine</h2>
            </div>
        </header>

        <div class="row">

            <div class="col-md-4">

                <p class="visible-sm visible-xs">
                    <a href="tel:@Config.Phone">@Config.Phone</a> | <a href="mailto:@Config.Email">@Config.Email</a>
                </p>

                <div id="site-nav">
                    <ul class="nav nav-pills nav-stacked" role="tablist" data-offset-top="250" data-spy="affix">
                        <li><a href="tel:@Config.Phone">@Config.Phone</a></li>
                        <li><a href="mailto:@Config.Email">@Config.Email</a></li>
                        <li><a href="#bookings">Bookings</a></li>
                        <li><a href="#classes">Classes</a></li>
                        <li>
                            <a href="#renewal">Mind&amp; Body Renewal</a>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#yogathedral">Yogathedral<span>&trade;</span> Walks</a></li>
                                <li><a href="#retreats">Retreats</a></li>
                                <li><a href="#yoga-tales">Yoga Tales<span>&trade;</span></a></li>
                            </ul>
                        </li>
                        
                        <li><a href="#about">About</a></li>
                        <li><a href="#art">Art</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8">

                <section>
                    <div class="page-header">
                        <h1 id="bookings">Bookings</h1>
                    </div>
                    <div class="row">
                        <div class="col-md-6">

                            <h4>Private Indoor or Outdoor Sessions</h4>
                            <ul class="list-unstyled">
                                <li>Pilates, Yoga, and Restorative</li>
                                <li>Contact @Config.FirstName at @Config.Phone</li>
                                <li>$90 per hour.</li>
                            </ul>

                        </div>
                        <div class="col-md-6">
                            <img alt="Four women practicing yoga outside on the grass. There is a blue sky, green trees, and a beautiful fence around the practice area." class="img-responsive img-rounded img-thumbnail" src="images/urban-yoga-xs.jpg" />
                        </div>
                    </div>
                </section>

                <section>
                    <div class="page-header">
                        <h1 id="classes">Classes</h1>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h4><a href="http://opendooryoga.bc.ca/">Open Door Yoga</a> <small>Kerrisdale</small></h4>
                            <dl>
                                <dt>Fridays</dt>
                                <dd>4 PM YIN</dd>
                                <dt>Saturdays</dt>
                                <dd>8:30 AM HATHA</dd>
                                <dd>10:15 AM HATHA</dd>
                                <dt>Sundays</dt>
                                <dd>4:15 PM HATHA</dd>
                            </dl>
                            <h4><a href="http://www.semperviva.com/">Semperviva Yoga</a> <small>Sun Centre</small></h4>
                            <dl>
                                <dt>Sundays</dt>
                                <dd>7 PM HATHA</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <img alt="A zen style drawing of a thin curve with a tiny red ball that appears to be rolling just up one side." class="img-responsive img-rounded img-thumbnail" src="images/meditation-xs.jpg" />
                        </div>
                    </div>

                </section>

                <section>
                    <div class="page-header">
                        <h1 id="renewal">Mind &amp; Body Renewal</h1>
                    </div>

                    <div>

                        <p>Mind &amp; Body Renewal classes are for people who are seeking to deepen and relax into the contemplative dimension of their lives through yoga, conscious breathing and restorative relaxation. Gentle yoga stretches, yoga postures and breathing exercises are introduced as a path for relaxation, stress reduction and renewal for body and mind.</p>
                        <p>Bookings as workshops, retreat or class-series for private, corporate and educational organizations.</p>
                        <p>More information about fees see under <a href="#bookings">"Bookings"</a>.</p>
                    </div>

                    <section>
                        <div class="page-header">
                            <h1 id="yogathedral">Yogathedral</h1>
                        </div>
                    </section>

                    <section>
                        <div class="page-header">
                            <h1 id="retreats">Retreats</h1>
                        </div>

                        <div class="row">

                            <div class="col-md-6 col-md-push-6">
                                <img alt="A painting of trees in the wind on the beach." class="img-responsive img-rounded img-thumbnail" src="images/island-reverie-xs.jpg" />
                            </div>

                            <div class="col-md-6 col-md-pull-6">

                                <ul class="list-group">

                                    <li class="list-group-item" itemscope itemtype="http://schema.org/Event">
                                        <h4 itemprop="name">Body Prayer Retreat</h4>
                                        <div itemprop="location" itemscope itemtype="http://schema.org/Place">
                                            <a itemprop="url" href="www.stphilipvictoria.ca">
                                                St Philip Anglican Church
                                            </a>
                                            <address itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                                                <span itemprop="streetAddress">2928 Eastdowne Road</span><br />
                                                <span itemprop="addressLocality">Victoria</span>, <span itemprop="addressRegion">BC</span><br />
                                                <span itemprop="addressCountry">Canada</span><br />
                                            </address>
                                        </div>
                                        <p>
                                            <ul class="list-unstyled">
                                                <li itemprop="startDate" content="2014-09-20">Saturday, September 20, 2014, 4-6PM</li>
                                                <li itemprop="startDate" content="2014-10-18">Saturday, October 18, 2014, 4-6PM</li>
                                            </ul>
                                        </p>
                                        <p itemprop="offers">To Register Contact: office@stphilipvictoria.ca or call Gillian Fosdick at 250-592-6823</p>
                                        <p itemprop="description">Body Prayer is a retreat for people who are seeking to deepen the contemplative dimension of their spiritual life through the practice of yoga and meditation. Gentle yoga stretching, yoga poses and breathing exercises are introduced as a path for relaxation, rejuvenation and stress reduction.</p>
                                    </li>

                                    <li class="list-group-item" itemscope itemtype="http://schema.org/Event">
                                        <h4>
                                            <span itemprop="name">Yoga In-Fusion &trade;</span>
                                        </h4>
                                        <p itemprop="location">Salt Spring Island, BC</p>
                                        <p itemprop="startDate" content="2014-08-22">August 22-24, 2014</p>
                                        <p itemprop="offers">$115 ($50 deposit to reserve)</p>
                                        <p itemprop="offers">Contact Ingrid to book.</p>
                                        <p itemprop="description">Music by Willy Miles-Grenzberg. Yoga instruction by Ingrid Hauss.</p>
                                    </li>

                                </ul>

                            </div>


                        </div>

                    </section>

                    <section>
                        <div class="page-header">
                            <h1 id="yoga-tales">Yoga Tales</h1>
                        </div>
                    </section>

                </section>

                <section>
                    <div class="page-header">
                        <h1 id="about">About</h1>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <img class="img-responsive img-thumbnail" src="/images/about-me-log-10x10-xs.jpg" alt="This is a placeholder image.">
                        </div>
                        <div class="col-sm-6">
                            <h4>@Config.FirstName @Config.LastName</h4>
                            <p>
                                Ingrid is a certified yoga and pilates teacher, artist and spiritual director who teaches yoga, meditation and body prayer. She offers workshops, retreats and art-installations in yoga, art and contemplative spirituality in the United States, Europe and Canada.
                            </p>
                        </div>
                    </div>

                </section>

                <section>
                    <div class="page-header">
                        <h1 id="art">Art</h1>
                    </div>

                    @{
                        <div class="img-gallery">
                            <div class="row">
                                @foreach (var fileInfo in ImageGallery.GetGalleryImages())
                                {
                                    // the file name pattern must be <title string> <dimension string> cm [SOLD]
                                    var imgSrc = ImageGallery.ImgSrc(fileInfo.FullName);
                                    var imgTitle = ImageGallery.ImgTitle(fileInfo);
                                    var imgDimensions = ImageGallery.ImgDimesions(fileInfo);
                                    var isSold = ImageGallery.IsSold(fileInfo);
                                    var imgSrcWatermarked = ImageGallery.AddWatermarkToImage(fileInfo);

                                    <div class="col-sm-6 col-md-4">

                                        <figure class="@(isSold ? "sold" : string.Empty)">
                                            <a href="@imgSrcWatermarked">
                                                <img class="img-responsive" src="@imgSrcWatermarked" />
                                            </a>
                                            <figcaption>
                                                <ul class="list-unstyled">
                                                    <li>@imgTitle</li>
                                                    <li>@imgDimensions</li>
                                                </ul>
                                            </figcaption>
                                        </figure>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                </section>

            </div>
        </div>

        <footer class="footer">
            <div class="pull-right">
                <span>&copy; Copyright 2014 @Config.FirstName @Config.LastName</span> |
                <a href="mailto:@Config.Email">@Config.Email</a> |
                <span>Website by </span><a href="http://www.bigfont.ca">BigFont</a>
            </div>
        </footer>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>

    @*IE 10*@
    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement('style')
            msViewportStyle.appendChild(
              document.createTextNode(
                '@@-ms-viewport{width:auto!important}'
              )
            )
            document.querySelector('head').appendChild(msViewportStyle)
        }
    </script>
</body>

</html>