      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style type="text/css">
        /*IE 10*/
        @@-webkit-viewport {
            width: device-width;
        }

        @@-moz-viewport {
            width: device-width;
        }

        @@-ms-viewport {
            width: device-width;
        }

        @@-o-viewport {
            width: device-width;
        }

        @@viewport {
            width: device-width;
        }
    </style>
</head>
<body data-spy="scroll" data-target="#site-nav">
    <div id="top"></div>
    <div class="container">
        <header class="row">
            @RenderPage("_Header.cshtml", Config)
        </header>
        <div class="row">
            <div class="col-md-4">
                @RenderPage("_SiteNav.cshtml", Config)
            </div>
            <div class="col-md-8">
                @RenderPage("_SectionTopPromotion.cshtml", Config)
                @RenderPage("_SectionBookings.cshtml", Config)
                @RenderPage("_SectionRetreats.cshtml", Config)
                @RenderPage("_SectionAbout.cshtml", Config)
                @RenderPage("_SectionArt.cshtml", Config)
            </div>
        </div>
        @RenderPage("_Footer.cshtml", Config)
    </div>
    @RenderPage("_Scripts.cshtml", Config)
</body>
</html>
