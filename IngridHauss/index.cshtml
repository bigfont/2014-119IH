<!DOCTYPE html>

@{
    var Config = new
    {
        FirstName = "Ingrid",
        LastName = "Hauss",
        Email = "ingrid@ingridhauss.com",
        Phone = "+1-604-720-1460",
        TagLine = "Art & Renewal."
    };
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@Config.FirstName @Config.LastName @Config.TagLine official site for bookings, classes, retreats, and art gallery." />
    <meta name="keywords" content="yoga, art, retreats, hatha, yin" />
    <title>@Config.FirstName @Config.LastName | @Config.TagLine</title>
    <link href="@Fingerprint.Tag("/Content/favicon.ico")" rel="shortcut icon" />
    <link href="@Fingerprint.Tag("/Content/page.css")" type="text/css" rel="stylesheet" />
    <!-- Bootstrap -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
