<!DOCTYPE html>
<html lang="en">
<head>

    @{
        dynamic Config = new System.Dynamic.ExpandoObject { };
        Config.First = "Ingrid";
        Config.Last = "Hauss";
        Config.Email = "ingridhauss@yahoo.com";
        Config.Phone = "+1-604-720-1460";
        Config.TagLine = "Yoga & Art";
        //
        Config.FullName = Config.First + " " + Config.Last;

    }

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@Config.FullName @Config.TagLine official site for bookings, classes, retreats, and art gallery." />
    <meta name="keywords" content="yoga, art, retreats, hatha, yin" />

    <title>@Config.FullName | @Config.TagLine</title>

    <link href="@Fingerprint.Tag("/Content/favicon.ico")" rel="shortcut icon" />
